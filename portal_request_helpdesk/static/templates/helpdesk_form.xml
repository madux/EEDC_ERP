<odoo>
    <data>
        <template name="portal_request_helpdesk_success_template" id="portal_request_helpdesk_success_template">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty h-100">
                    <div class="container d-flex flex-column justify-content-center h-70">
                        <div class="oe_structure" id="oe_structure_portal_request_thanks_you"/>
                            <div class="row justify-content-center">
                                <h1 class="text-center">
                                    <i class="fa fa-check-circle fa-1x text-success me-2" role="img" aria-label="Success" title="Success"/>
                                    <span>Your ticket Number is # <span t-esc="code"/>.</span>
                                </h1>
                                <h1 class="text-center">Thank you for submitting your request. You will get Notification on approval processes</h1>
                            </div>
                            <div class="oe_structure" id="oe_go_back"/>
                            <!-- <div class="mb-5 py-2 justify-content-center col-12 s_website_form_submit button_go_back" data-name="Submit Button">
                                <div style="width: 200px;" class="s_website_form_label"/>
                                <a href="/my/requests" role="button" class="btn btn-primary btn-lg s_website_form_send o_default_snippet_text">View Requests</a>
                                <a href="/" role="button" class="btn btn-primary btn-lg s_website_form_send o_default_snippet_text oe_right">Go Back</a>
                            </div> -->
                    </div>
                </div>
            </t>
        </template>

        <template id="portal_helpdesk_form_template" name="Request form">
            <t t-call="portal.portal_layout">
                <t t-set="wrapwrap_classes" t-value="'o_portal_bg_dark'"/>
                    <section class="s_website_form pt16 pb16 o_colored_level helpdesk-request-form" id="helpdesk-request-form" data-vcss="001" data-snippet="s_website_form" data-name="Form" style="background-image: none;">
                    <div class="navbar-light  py-0 mb-2">
                        <!-- <a id="previous" href="/my/requests" class="btn btn-secondary btn-sm">
                            Back
                        </a> -->
                    </div>
                    <form id="msform" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-pre-fill="true">
                        <div class="row mt16 o_project_portal_sidebar">
                            <div id="request_content" class="col-12 col-lg justify-content-end">
                                <div id="card" class="card">
                                    <!-- <div id="card_header" class="card-header container" data-anchor="true">
                                        <div class="row gs-0">
                                            <div class="col-md">
                                                <h5 class="row mx-1 mb-1 mb-md-0">
                                                <div class="col-6 text-truncate">
                                                    <span t-field="req.name"/>
                                                    <a t-att-id="req.id" class="record_id"/>
                                                    <small class="text-muted "> # </small>
                                                </div> 
                                                <div class="col-3 p-3 text-end">
                                                    <small class="text-end">Status:</small>
                                                    <span t-field="req.stage_id.name" class=" badge rounded-pill text-bg-info" title="Current stage of this request"/>
                                                </div>
                                                </h5>
                                            </div>
                                        </div>
                                    </div> -->
                                    <div id="card_body" class="card-body">
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Request date</strong>: <span class="col-md-6" disabled="true" t-esc="request_date"/>
                                             <!-- t-options='{"widget": "datetime", "hide_seconds": True}'/> -->
                                        </div><br/>
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Request type</strong>:
                                            <span class="col-md-6">
                                                <select id="request_type_id" name="request_type_id" required="required" class="form-control s_website_form_input" labelfor="Request type" >
                                                    <option selected="selected" value="">--Select request type -- </option>
                                                    <t t-foreach="request_type_ids" t-as="rt">
                                                        <option t-att-value="rt.id">
                                                            <span t-esc="rt.name"/>
                                                        </option>
                                                    </t>
                                                </select> 
                                            </span>
                                        </div>
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Category</strong>:
                                            <span class="col-md-6">
                                                <select id="ticket_type_id" name="ticket_type_id" required="required" class="form-control s_website_form_input" labelfor="Category">
                                                    <option selected="selected" value="">--select--</option>
                                                    <t t-foreach="ticket_type_ids" t-as="tt">
                                                        <option t-att-value="tt.id">
                                                            <span t-esc="tt.name"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </span>
                                        </div> 
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Title</strong>: 
                                            <span class="col-md-6">
                                                <input type="text" class="form-control s_website_form_input" name="title" required="true" id="title" labelfor="Title"/>
                                            </span>
                                        </div>
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Client Name</strong>: 
                                            <span class="col-md-6">
                                                <input type="text" class="form-control s_website_form_input" name="client_name" required="true" id="client_name" labelfor="Client name"/>
                                            </span>
                                        </div>
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Client Phone</strong>: 
                                            <span class="col-md-6">
                                                    <input type="tel" class="form-control s_website_form_input" required="required" name="phone_number" data-fill-with="phone" id="phone_number" labelfor="Client Phone"/>
                                            </span>
                                        </div>
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Email from</strong>: 
                                            <span class="col-md-6">
                                                <input type="email" class="form-control s_website_form_input" required="required" name="email_from" data-fill-with="email" id="email_from" labelfor="Email"/>
                                            </span>
                                        </div>

                                        <div class="row mb-4">
                                            <strong class="col-md-4">Deadline Date</strong>:
                                            <span class="col-md-6">
                                                <input type="text" class="form-control datepicker s_website_form_input" id="deadline_date" 
                                                name="deadline_date" labelfor="Deadline Date"
                                                />
                                            </span>
                                        </div>

                                        <div class="row mb-4">
                                            <strong class="col-md-4">Document</strong>:
                                            <span class="col-md-6">
                                                <input type="file" class="form-control s_website_form_input" name="other_docs" id="other_docs" multiple="multiple" placeholder="Hold shift / Ctrl to select multiple files"/>
                                            </span>
                                        </div>
                                        
                                        <strong class="col-md-4">Description:</strong>
                                        <div class="row m-2 mb-4 mb-5" name="descriptionDiv">
                                            <textarea class="form-control s_website_form_input" name="description" required="1" id="description" rows="2" labelfor="Description"/>
                                        </div>

                                        <div class="mb-0 py-2 col-12 s_website_form_submit" data-name="Submit Button">
                                            <div style="width: 200px;" class="s_website_form_label"/>
                                            <a href="#" role="button" class="btn btn-primary btn-lg o_default_snippet_text submit_btn" id="submit_btn">Submit</a>
                                            <span id="s_website_form_result"/>
                                        </div>
                                    </div>
                                </div> 

                            </div>
                        </div>
                    </form>
                </section>
            </t>
        </template>
    </data>
</odoo>