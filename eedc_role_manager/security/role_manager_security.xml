<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <record id="module_role_manager_category" model="ir.module.category">
            <field name="name">Role Manager</field>
            <field name="description">Role Management System</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_role_manager_admin" model="res.groups">
            <field name="name">Role Manager Admin</field>
            <field name="category_id" ref="module_role_manager_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Full access to role management system, can create/edit roles and assign to users</field>
        </record>

        <record id="group_role_manager_user" model="res.groups">
            <field name="name">Role Manager User</field>
            <field name="category_id" ref="module_role_manager_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view roles but cannot modify role definitions</field>
        </record>

    </data>
</odoo>