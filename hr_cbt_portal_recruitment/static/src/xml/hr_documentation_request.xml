<odoo>
    <data>
        <template id="documentation_request_template" name="Documentation form">
            <t t-call="portal.portal_layout">
                <t t-set="wrapwrap_classes" t-value="'o_portal_bg_dark'"/>
                <t t-set="o_portal_fullwidth_alert" groups="base.group_user">
                    <t t-call="portal.portal_back_in_edit_mode">
                        <t t-set="backend_url" t-value="'/web#model=hr.applicant&amp;id=%s&amp;view_type=form' % (applicant.id)"/>
                    </t>
                </t>
                <section class="s_website_form pt16 pb16 o_colored_level documentation-request-form" id="documentation-request-form" data-vcss="001" data-snippet="s_website_form" data-name="Form" style="background-image: none;">
                    <div class="navbar-light  py-0 mb-2">
                        <a id="previous" href="/" class="btn btn-secondary btn-sm">
                            Back
                        </a>
                        <a id="edit" t-att-href="'/documentation-request/%s' %(applicant.id)" class="btn btn-secondary btn-sm">
                            Edit
                        </a>
                        <a id="save" href="#" class="btn btn-secondary btn-sm d-none">
                            save
                        </a>
                    </div>

                    <div class="row mt16 o_project_portal_sidebar">
                        <t t-call="portal.portal_record_sidebar">
                            <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>

                            <t t-set="entries">
                                <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                                    <!-- <li t-if="applicant.is_documentation_process" class="list-group-item flex-grow-1"> -->
                                    <!-- <li class="list-group-item flex-grow-1">
                                        <div class="d-grid flex-sm-nowrap">
                                            <a class="btn btn-secondary pt-1 start-documentation" id="start-documentation">
                                                Start Documentation
                                            </a>
                                        </div>
                                    </li> -->
                                    <li id="ticket-nav" class="list-group-item ps-0 flex-grow-1" t-ignore="true" role="complementary">
                                        <ul class="nav flex-column">
                                            <li class="nav-item" id="nav-header">
                                                <a class="nav-link ps-3" style="max-width: 200px;">
                                                    My Submitted documents
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                     
                                    <li t-if="applicant.stage_id" class="list-group-item flex-grow-1">
                                        <div class="col-12 col-md-12 pb-2">
                                            <strong>Stage</strong>
                                            <div class="d-flex ps-3 flex-nowrap">
                                                <div class="ms-2">
                                                    <div t-out="applicant.stage_id.name" class="mt-2"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-12 pb-2" t-if="applicant.partner_name">
                                            <strong>Employee / Requester</strong>
                                            <div class="d-flex ps-3 flex-nowrap">
                                                <div class="ms-2">
                                                    <div t-out="applicant.partner_name" class="mt-2"/>
                                                    <a t-attf-href="mailto:{{applicant.email_from}}" t-if="applicant.email_from"><div t-field="applicant.email_from"/></a>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </t>
                        </t>
                        <div id="document_request_content" class="col-12 col-lg justify-content-end">
                            <div id="card" class="card">
                                <div id="card_header" class="card-header container" data-anchor="true">
                                    <form id="msform1" method="post" enctype="multipart/form-data" data-mark="*" data-pre-fill="true">
                                        <div class="row gs-0">
                                            <div class="col-md">
                                                <h5 class="row mx-1 mb-1 mb-md-0">
                                                    <div class="col-6 text-truncate">
                                                        <span t-field="applicant.partner_name"/>
                                                        <a t-att-id="applicant.id" class="record_id"/>
                                                        <small class="text-muted "> (Job Role: <span t-field="applicant.job_id.name"/>) </small>
                                                    </div>
                                                    <div class="col-3 text-truncate">
                                                        
                                                    </div>
                                                    <div class="col-3 text-end">
                                                        <small class="text-end">Status:</small>
                                                        <span t-field="applicant.stage_id.name" class=" badge rounded-pill text-bg-info" title="Current stage of this request"/>
                                                    </div>
                                                </h5>
                                            </div>
                                        </div>
                                    </form>  
                                </div>
                                <form id="msformidocs" method="post" enctype="multipart/form-data" data-mark="*" data-pre-fill="true">
                                    <div id="build_attachment" class="card-body">
                                    
                                    <!-- <div t-if="not is_html_empty(applicant.description)" class="row mb-4" name="description">
                                        <div class="col-lg-12" t-raw="applicant.description"/>
                                    </div> -->
                                    </div>
                                </form>
                                <div class="mb-0 py-2 col-12 s_website_form_submit d-none" id="s_website_form_submit_div" data-name="Submit Button">
                                    <div style="width: 200px;" class="s_website_form_label"/>
                                    <a href="#" role="button" class="btn btn-primary btn-lg o_default_snippet_text button_doc_submit">Submit</a>
                                    <span id="s_website_form_result"/>
                                </div>
                                <div class="alert alert-info d-none" id="show-if-no-documentation" role="alert">
                                    No documentation to upload<br/>
                                </div>
                                <div class="d-grid flex-sm-nowrap" id="start_documentation_div">
                                    <div class="alert alert-info" role="alert">
                                        Please ensure all compulsory documents are filled. <br/>
                                        Incase a red alert warning is displayed, kindly note that our HR officer faulted your document. Read the comment and resubmit it <br/>
                                        Click on the start documentation button below to proceed.<br/>
                                    </div>
                                    <a class="btn btn-secondary pt-1 start-documentation" id="start-documentation">
                                        Start Documentation
                                    </a>
                                </div>
                            </div>
                            
                            
                            <div class="row">
                                <div id="successful_alert" role="dialog" class="modal col-sm-6 mt-32">
                                    <div class="alert fade alert-simple alert-success alert-dismissible text-left font__family-montserrat font__size-16 font__weight-light brk-library-rendered rendered show">
                                        <i class="fa fa-check" aria-hidden="true"></i>
                                        <strong class="font__weight-semibold">Well done!</strong> You successfully updated your comment.
                                        <button type="button" id="btn-close-success" class="btn-close-success btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </t>
        </template>
    </data>
</odoo>