        </xpath>
        <xpath expr="//page[@name='job_description_page']" position="after">
          <page string="Descriptions" name="more_descriptions">
              <field name="job_section_descriptions">
                <form>
                  <group>
                    <field name="title" />
                  </group>
                  <field name="job_descriptions">
                    <tree>
                        <field name="description" />
                    </tree>
                  </field>
                </form>
                <tree>
                  <field name="title" />
                </tree>
              </field>
          </page>
          
