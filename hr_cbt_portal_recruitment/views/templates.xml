<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>


        <template id="job_already_applied" name="job_already_applied">
            <t t-call="website.layout">
                <t t-set="title" t-value="'Jobs | Exists'" />
                <div id="wrap" class="oe_structure oe_empty"/>
                <t t-call="eha_website_hr_recruitment.preloader"/>
                <div id="wrapper" class="d-none">
                    <div class="section">
                        <div class="row" style="text-align: center;">
                            <div style="margin: auto; width: 50%">
                                <h3>Job Application Already Exists</h3>
                                <label class="mt-4 mb-3">You have already applied to this job in this recruitment window</label>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="feedback_forms" name="Feed Back Form">
        <t t-name="eha_website_hr_recruitment.feedback_forms">
            <div class="container">
                <div id="feedbackform" class="row m-5">
                    <div id="feedbackform2" class="feedback-form">
                        <form id="feedbackform3" action="/feedback_submit" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" class="form-control o_website_form_input" name="partner_name" t-att-value= "partner_name" required="1" placeholder="Your Name*"/>
                                        <p class="help-block text-danger"/>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control o_website_form_input" name="partner_email" t-att-value= "partner_email" required="1" placeholder="Your Email*"/>
                                        <p class="help-block text-danger"/>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control o_website_form_input" required="1" name="phone" t-att-value= "phone" placeholder="Phone Number*"/>
                                        <p class="help-block text-danger"/>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group mt-3">
                                        <h5>I am also interested in</h5>
                                        <select class="form-control select2" name="name" t-att-value= "name" required="" placeholder="Subject *" multiple="multiple" size="5">
                                            <option value="Membership plans">Membership Plans</option>
                                            <option value="Home Care">Home Care</option>
                                            <option value="Mobile Pharmacy">Mobile Pharmacy</option>
                                            <option value="Telehealth">Telehealth</option>
                                            <option value="Covid-19 Ambulance Evacuation">Covid-19 Ambulance Evacuation</option>
                                        </select>
                                        <p class="help-block text-danger"/>
                                    </div>
                                    <div class="form-group mt-3">
                                        <h5>Best time of day to contact me</h5>
                                        <input type="text" class="form-control o_website_form_input" name="time" placeholder="for example: from 3pm to 5pm"/>
                                        <p class="help-block text-danger"/>
                                    </div>
                                </div>
                                <div class="col-lg-12 mt-3 text-center">
                                    <button type="submit" class="btn btn-primary o_website_form_send">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
        </template>


        <!-- Thank you page for feedback form -->
        <template id="thankyou_page" name="Thank you Page">
        <t t-name="eha_website_hr_recruitment.thankyou_page">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <!-- <div class="topbar">
                                    <img class="top-logo" src="/eha_website/static/src/img/logo.png"/>
                                    <a class="btn-primary" href="https://www.eha.ng/">VISIT EHA CLINICS</a>
                                </div> -->
                    <div class="section mt-6 mb-5">
                        <div class="container text-center mb-3">
                            <img width="200" src="/eha_website_hr_recruitment/static/src/img/illu-man.png" data-original-title="" title="" aria-describedby="tooltip92934"/>
                            <div class="text-center mb-4" role="status">
                                <h3 class="text-primary mt-4 mb-4">Thank you!</h3>
                                <h5>Your request is on the way. We will get back to you shortly.</h5>
                            </div>
                            <a href="javascript:history.back()" class="btn-primary">back</a>
                        </div>
                    </div>
                </div>
            </t>
        </t>
        </template>

        <!-- Incident form template -->
        <template id="incident_mgt_template" name="Incident Form">
        <t t-name="eha_website_hr_recruitment.incident_mgt_template">
            <t t-call="website.layout">
                <section class="s_cover parallax page" data-scroll-background-ratio="0" style="background-image: none;">

                    <span class="s_parallax_bg oe_img_bg oe_custom_bg" style="background-image: url(&quot;/eha_website/static/src/img/bg-clinic.jpg&quot;); background-position: 48.83% 30.35%;"/>
                    <div class="container">
                        <div class="row s_nb_column_fixed">
                            <div class="col-lg-12 s_title pt48 pb0" data-name="Title">
                                <h1 class="title-banner">
                                    <span>Incident Report for </span>
                                    <br />
                                    <span class="text-highlight">EHA Clinics.</span>
                                </h1>
                            </div>
                        </div>
                    </div>
                </section>
                <div class="container mt-5 mb-5 incident-mgt-container">
                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <h4>You have experienced an incident? Please use this form to report.</h4>
                        </div>
                    </div>
                    <form action="/incident-report/" id="incidentform-id" method="post" enctype="multipart/form-data" data-model_name="helpdesk.ticket" data-editable-form="false">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="box-rounded light-blue p-4 m-0">
                                    <div class="form-group">
                                        <label class="col-form-label" for="location">Location *</label>
                                        <select name="inputBranch_id" id="inputBranch_id" required="required" data-init="1" class="form-control">
                                            <option disabled="true" selected="true" value="">Select Location</option>
                                            <t t-foreach="branches" t-as="branch">
                                                <option t-att-value="branch.id">
                                                    <span t-esc="branch.name"/>
                                                </option>
                                            </t>
                                        </select>
                                        <p class="help-block text-danger"/>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label" for="inputDepartment">Department *</label>
                                        <select name="inputDepartment" id="inputDepartment" required="required" class="form-control">
                                            <option disabled="true" selected="true" value="">Select department</option>
                                            <t t-foreach="departments" t-as="dep">
                                                <option t-att-value="dep.id">
                                                    <span t-esc="dep.name"/>
                                                </option>
                                            </t>
                                        </select>
                                        <p class="help-block text-danger"/>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label" for="date">Date and Time of Incident *
                                        </label>
                                        <div class="o_website_form_date input-group date" id="date_picker" data-target-input="nearest">
                                            <input name="date" required="required" id="date" type="text" class="form-control datetimepicker-input o_website_form_input" data-toggle="datetimepicker" data-target="#date"/>
                                            <div class="input-group-append" data-target="#date" data-toggle="datetimepicker">
                                                <div class="input-group-text">
                                                    <i class="fa fa-calendar" data-original-title="Date" title="Date" aria-describedby="tooltip118921"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="box-rounded no-plan p-4 m-0">
                                    <div class="form-group">
                                        <label class="col-form-label" for="inputCategory">Type of Incident *</label>
                                        <select name="inputCategory" id="inputCategory" required="required" data-init="1" class="form-control">
                                            <option disabled="true" selected="true" value="">Select type of incident</option>
                                            <option value="near_miss_event">Near Miss</option>
                                            <option value="sentinel_event">Sentinel Event</option>
                                            <option value="adverse_event">Adverse Event</option>
                                            <option value="incident_event">Incident</option>
                                        </select>
                                        <p class="help-block text-danger"/>
                                    </div>
                                    <!--   -->
                                    <div class="form-group">
                                        <div class="md-form">
                                            <textarea class="md-textarea form-control" required="1" name="inputDescription" placeholder="Description" rows="3" id="inputDescription"/>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-form-label" for="prevention">Preventive Action</label>
                                        <textarea class="md-textarea form-control" name="inputPrevention" t-att-value="inputPrevention"/>
                                        <p class="help-block text-danger"/>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label" for="corrective">Corrective Action</label>
                                        <textarea class="md-textarea form-control" name="inputCorrective" t-att-value="inputCorrective"/>
                                        <p class="help-block text-danger"/>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label" for="reporter">Person(s) affected</label>
                                        <ol class="form-group" id="affect_person_details">
                                        </ol>
                                        <span class="add_person_btn btn btn-outline-primary btn-sm">add person</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row border-top-blue">
                            <div class="col-lg-12 m-4 p-4 text-center ">
                                <button type="submit" class="btn btn-primary btn-lg o_website_form_send" id="button-send-report">Send Report</button>
                            </div>
                        </div>
                    </form>
                </div>

            </t>
        </t>
        </template>

    </data>
</odoo>
