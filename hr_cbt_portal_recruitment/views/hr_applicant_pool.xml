<?xml version="1.0" encoding="utf-8"?>
    <odoo>
		<record id="view_hr_applicant_pool_form" model="ir.ui.view">
			<field name="name">hr.applicant.pool</field>
			<field name="model">hr.applicant.pool</field>
			<field name="arch" type="xml">
				<form string="HR POOL" create="1">
                    <header>
						<button 
                            name="create_applicant" 
                            string="Create As Applicant" 
                            class="oe_highlight" 
                            type="object"
                            attrs="{'invisible': [('state', '=', 'draft')]}"
                            confirm="Are you sure you want to create" 
                            groups="hr.group_hr_manager"
                        />
                        <field name="state" widget="statusbar" />
					</header>
                    <sheet>
                        <!-- <div class="oe_title">
                            <h1>
                            </h1>
                        </div> -->
                        <group>
                            <group>
                        		<field name="first_name" required="1"/>
                        		<field name="last_name" required="1"/>
                        		<field name="middle_name" required="1"/>
                        		<field name="phone_number" required="1"/>
                        		<field name="email" required="1"/>
                            </group>
                            <group>
                        		<field name="has_completed_nysc" required="1"/>
                        		<field name="linkedin_account" required="1"/>
                        		<field name="applied_date" required="1"/>
                        		<field name="applicant_cv_link"/>
                            </group>
                        </group> 
                    </sheet>
                </form>
			</field>
		</record>

		<record id="view_applicant_pool_tree" model="ir.ui.view">
			<field name="name">hr.applicant.pool.tree</field>
			<field name="model">hr.applicant.pool</field>
			<field name="arch" type="xml">
				<tree string="Aapplicant pool" create="1">
                    <field name="first_name" required="1"/>
                    <field name="last_name" required="1"/>
                    <field name="phone_number" required="1"/>
                    <field name="email" required="1"/>
                    <field name="state" required="1"/>
                </tree>
			</field>
		</record>

		<record id="action_applicant_pool_id" model="ir.actions.act_window">
			<field name="name">Applicant Pool</field>
			<field name="res_model">hr.applicant.pool</field>
			<field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
			<field name="view_id" eval="False"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click To Create.
				</p>
			</field>
		</record>

        <menuitem id="view_applicant_pool" name="Applicant pool" action="action_applicant_pool_id" sequence="8" parent="hr_recruitment.menu_crm_case_categ0_act_job"
        groups="hr.group_hr_manager"/>

</odoo>