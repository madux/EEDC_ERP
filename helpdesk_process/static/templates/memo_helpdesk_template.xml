<odoo>
    <data>
        <template name="memo_request_helpdesk_success_template" id="memo_request_helpdesk_success_template">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty h-100">
                    <div class="container d-flex flex-column justify-content-center h-70">
                        <div class="oe_structure" id="oe_structure_portal_request_thanks_you"/>
                            <div class="row justify-content-center p-5">
                                <h1 class="text-center">
                                    <i class="fa fa-check-circle fa-1x text-success me-2" role="img" aria-label="Success" title="Success"/>
                                    <span>Your ticket Number is # <span t-esc="code"/>.</span>
                                </h1>
                                <h1 class="text-center">Thank you for submitting your request. You will get Notification on each processes</h1>
                            </div>
                            <div class="oe_structure" id="oe_go_back"/>
                            <!-- <div class="mb-5 py-2 justify-content-center col-12 s_website_form_submit button_go_back" data-name="Submit Button">
                                <div style="width: 200px;" class="s_website_form_label"/>
                                <a href="/my/requests" role="button" class="btn btn-primary btn-lg s_website_form_send o_default_snippet_text">View Requests</a>
                                <a href="/" role="button" class="btn btn-primary btn-lg s_website_form_send o_default_snippet_text oe_right">Go Back</a>
                            </div> -->
                    </div>
                </div>
            </t>
        </template>

        <template id="memo_helpdesk_form_template" name="Ticket form">
            <t t-call="portal.portal_layout">
                <t t-set="wrapwrap_classes" t-value="'o_portal_bg_dark'"/>
                    <section class="s_website_form pt16 pb16 o_colored_level memo-request-form" id="memo-request-form" data-vcss="001" data-snippet="s_website_form" data-name="Form" style="background-image: none;">
                    <div class="navbar-light  py-0 mb-2">
                        <!-- <a id="previous" href="/my/requests" class="btn btn-secondary btn-sm">
                            Back
                        </a> -->
                    </div>
                    <form id="msform" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-pre-fill="true">
                        <div class="row mt16 o_project_portal_sidebar">
                            <div id="request_content" class="col-12 col-lg justify-content-end">
                                <div id="card" class="card">
                                    <div id="card_body" class="card-body">
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Request date</strong>: <span class="col-md-6" disabled="true" t-esc="request_date"/>
                                             <!-- t-options='{"widget": "datetime", "hide_seconds": True}'/> -->
                                        </div><br/>
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Ticket Category</strong>:
                                            <span class="col-md-6">
                                                <select id="helpdesk_memo_config_id" name="helpdesk_memo_config_id" required="required" class="form-control s_website_form_input" labelfor="Request type" >
                                                    <option selected="selected" value="">--Select request type -- </option>
                                                    <t t-foreach="request_type_ids" t-as="rt">
                                                        <option t-att-value="rt.id">
                                                            <span t-esc="rt.name"/>
                                                        </option>
                                                    </t>
                                                </select> 
                                            </span>
                                        </div>
                                        
                                         
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Title</strong>: 
                                            <span class="col-md-6">
                                                <input type="text" class="form-control s_website_form_input" name="title" required="true" id="title" labelfor="Title"/>
                                            </span>
                                        </div>
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Customer Name</strong>: 
                                            <span class="col-md-6">
                                                <input type="text" class="form-control s_website_form_input" name="customer_name" required="true" id="customer_name" labelfor="Customer name"/>
                                            </span>
                                        </div>
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Customer Phone</strong>: 
                                            <span class="col-md-6">
                                                    <input type="tel" class="form-control s_website_form_input" required="required" name="customer_phone" data-fill-with="phone" id="customer_phone" labelfor="Customer Phone"/>
                                            </span>
                                        </div>

                                        <div class="row mb-4">
                                            <strong class="col-md-4">Customer Email</strong>: 
                                            <span class="col-md-6">
                                                <input type="email" class="form-control s_website_form_input" required="required" name="customer_email" data-fill-with="email" id="customer_email" labelfor="Customer Email"/>
                                            </span>
                                        </div> 
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Customer Address</strong>: 
                                            <span class="col-md-6">
                                                <input type="text" class="form-control s_website_form_input" required="required" name="customer_address1" data-fill-with="email" id="customer_address1" labelfor="Customer Address"/>
                                            </span>
                                        </div>
                                        <div class="row mb-4 d-none">
                                            <strong class="col-md-4">Customer Address</strong>: 
                                            <span class="col-md-6">
                                                <input type="text" class="form-control s_website_form_input" name="customer_address2" data-fill-with="email" id="customer_address2" labelfor="Customer Address 2"/>
                                            </span>
                                        </div>
                                        <div class="row mb-4">
                                            <strong class="col-md-4">State</strong>:
                                            <span class="col-md-6">
                                                <select id="customer_state_id" name="customer_state_id" required="required" class="form-control s_website_form_input" labelfor="State">
                                                    <option selected="selected" value="">--select--</option>
                                                    <t t-foreach="state_ids" t-as="st">
                                                        <option t-att-value="st.id">
                                                            <span t-esc="st.name"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </span>
                                        </div> 
                                        
                                        <div class="row mb-4">
                                            <strong class="col-md-4">District</strong>:
                                            <span class="col-md-6">
                                                <select id="district_id" name="district_id" required="required" class="form-control s_website_form_input" labelfor="District">
                                                    <option selected="selected" value="">--select--</option>
                                                    <t t-foreach="district_ids" t-as="br">
                                                        <option t-att-value="br.id">
                                                            <span t-esc="br.name"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </span>
                                        </div>
                                        <div class="row mb-4 d-none">
                                            <strong class="col-md-4">Branch</strong>:
                                            <span class="col-md-6">
                                                <select id="branch_id" name="branch_id" required="required" class="form-control s_website_form_input" labelfor="Branch / District">
                                                    <option selected="selected" value="">--select--</option>
                                                    <t t-foreach="branch_ids" t-as="br">
                                                        <option t-att-value="br.id">
                                                            <span t-esc="br.name"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </span>
                                        </div>
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Meter type</strong>:
                                            <span class="col-md-6">
                                                <select id="meter_type" name="meter_type" required="required" class="form-control s_website_form_input" labelfor="Meter type">
                                                    <option selected="selected" value="">--select--</option>
                                                    <option value="postpaid">
                                                        <span>Postpaid</span>
                                                    </option>
                                                    <option value="postpaid">
                                                        <span>Prepaid</span>
                                                    </option>
                                                    <option value="direct source">
                                                        <span>Direct Source</span>
                                                    </option>
                                                </select>
                                            </span>
                                        </div> 
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Customer / Meter No</strong>: 
                                            <span class="col-md-6">
                                                <input type="text" class="form-control s_website_form_input" name="customer_meter_no" required="true" id="customer_meter_no" labelfor="Customer / Meter No"/>
                                            </span>
                                        </div>

                                        
                                        <!-- <strong class="col-md-4">Description:</strong>
                                        <div class="row m-2 mb-4 mb-5" name="descriptionDiv">
                                            <textarea class="form-control s_website_form_input" name="complaint_description" required="1" id="complaint_description" rows="2" labelfor="Description"/>
                                        </div> -->
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Description:</strong>:
                                            <span class="col-md-6">
                                                <textarea class="form-control s_website_form_input" name="complaint_description" required="1" id="complaint_description" rows="2" labelfor="Description"/>
                                            </span>
                                        </div>
                                        <div class="row mb-4">
                                            <strong class="col-md-4">Deadline Date</strong>:
                                            <span class="col-md-6">
                                                <input type="text" class="form-control datepicker s_website_form_input" id="deadline_date" 
                                                name="deadline_date" labelfor="Deadline Date"
                                                />
                                            </span>
                                        </div>

                                        <div class="row mb-4">
                                            <strong class="col-md-4">Document</strong>:
                                            <span class="col-md-6">
                                                <input type="file" class="form-control s_website_form_input" name="other_docs" id="other_docs" multiple="multiple" placeholder="Hold shift / Ctrl to select multiple files"/>
                                            </span>
                                        </div> 
                                        <div class="mb-0 py-2 col-12 s_website_form_submit" data-name="Submit Button">
                                            <div style="width: 200px;" class="s_website_form_label"/>
                                            <a href="#" role="button" class="btn btn-primary btn-lg o_default_snippet_text submit_btn center" id="submit_btn">Submit</a>
                                            <span id="s_website_form_result"/>
                                        </div>
                                    </div>
                                </div> 

                            </div>
                        </div>
                    </form>
                </section>
            </t>
        </template>
    </data>
</odoo>