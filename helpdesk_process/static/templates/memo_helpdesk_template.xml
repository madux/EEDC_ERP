<odoo>
    <data>
        <template id="memo_helpdesk_form_template" name="Ticket Form">
            <t t-call="portal.portal_layout">
                <t t-set="wrapwrap_classes" t-value="'o_portal_bg_dark'"/>
                <section id="memo-request-form" class="memo-helpdesk-container s_website_form o_colored_level" data-snippet="s_website_form" data-name="Request Form">
                    <h2 class="text-center" style="color: #138496; margin-bottom: 32px;">Helpdesk Ticket Request</h2>

                    <form id="msform" method="post" enctype="multipart/form-data"
                          class="memo-helpdesk-form o_mark_required"
                          data-mark="*" data-pre-fill="true">

                        <div class="form-group">
                            <label for="request_date">Request Date</label>
                            <input type="text" t-att-value="request_date" class="form-control s_website_form_input" readonly="1" labelfor="Request Date"/>
                        </div>

                        <div class="form-group">
                            <label for="helpdesk_category_id">Ticket Category</label>
                            <select id="helpdesk_category_id" name="helpdesk_category_id" required="required"
                                    class="form-control s_website_form_input" labelfor="Ticket Category">
                                <option value="">-- Select Category --</option>
                                <t t-foreach="category_ids" t-as="rt">
                                    <option t-att-value="rt.id"><t t-esc="rt.name"/></option>
                                </t>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="title">Complain Title</label>
                            <input type="text" name="title" id="title" class="form-control s_website_form_input" required="true" placeholder="Enter Title" labelfor="Title"/>
                        </div>

                        <div class="form-group">
                            <label for="helpdesk_memo_config_id">Ticket Type</label>
                            <select id="helpdesk_memo_config_id" name="helpdesk_memo_config_id" required="required"
                                    class="form-control s_website_form_input" labelfor="Ticket Type">
                                <option value="">-- Select Type --</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="customer_name">Customer Name</label>
                            <input type="text" name="customer_name" id="customer_name" class="form-control s_website_form_input" required="true" placeholder="Enter Customer Name" labelfor="Customer Name"/>
                        </div>

                        <div class="form-group">
                            <label for="customer_phone">Customer Phone</label>
                            <input type="tel" name="customer_phone" id="customer_phone" class="form-control s_website_form_input" required="true" placeholder="Enter Phone Number" labelfor="Customer Phone"/>
                        </div>

                        <div class="form-group">
                            <label for="customer_email">Customer Email</label>
                            <input type="email" name="customer_email" id="customer_email" class="form-control s_website_form_input" required="true" placeholder="Enter Email" labelfor="Customer Email"/>
                        </div>

                        <div class="form-group">
                            <label for="customer_address1">Customer Address</label>
                            <input type="text" name="customer_address1" id="customer_address1" class="form-control s_website_form_input" required="true" placeholder="Enter Address" labelfor="Customer Address"/>
                        </div>

                        <div class="form-group d-none">
                            <label for="customer_address2">Customer Address (2)</label>
                            <input type="text" name="customer_address2" id="customer_address2" class="form-control s_website_form_input"/>
                        </div>

                        <div class="form-group">
                            <label for="customer_state_id">State</label>
                            <select id="customer_state_id" name="customer_state_id" class="form-control s_website_form_input" required="true" labelfor="State">
                                <option value="">-- Select State --</option>
                                <t t-foreach="state_ids" t-as="st">
                                    <option t-att-value="st.id"><t t-esc="st.name"/></option>
                                </t>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="district_id">District</label>
                            <select id="district_id" name="district_id" class="form-control s_website_form_input" required="true" labelfor="District">
                                <option value="">-- Select District --</option>
                                <t t-foreach="district_ids" t-as="br">
                                    <option t-att-value="br.id"><t t-esc="br.name"/></option>
                                </t>
                            </select>
                        </div>

                        <div class="form-group d-none">
                            <label for="branch_id">Branch</label>
                            <select id="branch_id" name="branch_id" class="form-control s_website_form_input" labelfor="Branch">
                                <option value="">-- Select Branch --</option>
                                <t t-foreach="branch_ids" t-as="br">
                                    <option t-att-value="br.id"><t t-esc="br.name"/></option>
                                </t>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="meter_type">Meter Type</label>
                            <select id="meter_type" name="meter_type" required="true" class="form-control s_website_form_input" labelfor="Meter Type">
                                <option value="">-- Select Meter Type --</option>
                                <option value="postpaid">Postpaid</option>
                                <option value="prepaid">Prepaid</option>
                                <option value="direct source">Direct Source</option>
                            </select>
                        </div>

                        <div class="form-group meter_no_field">
                            <label for="meter_no">Meter No</label>
                            <input type="text" name="meter_no" id="meter_no" class="form-control s_website_form_input" placeholder="Enter Meter No" required="true" labelfor="Meter No"/>
                        </div>

                        <div class="form-group account_no_field" style="display: none;">
                            <label for="account_no">Customer Account No</label>
                            <input type="text" name="account_no" id="account_no" class="form-control s_website_form_input" placeholder="Enter Account No" labelfor="Customer Account No"/>
                        </div>

                        <div class="form-group">
                            <label for="complaint_description">Description</label>
                            <textarea name="complaint_description" id="complaint_description" class="form-control s_website_form_input" rows="3" required="true" placeholder="Enter complaint details..." labelfor="Description"></textarea>
                        </div>

                        <div class="form-group d-none">
                            <label for="deadline_date">Deadline Date</label>
                            <input type="text" name="deadline_date" id="deadline_date" class="form-control datepicker s_website_form_input" labelfor="Deadline Date"/>
                        </div>

                        <div class="form-group">
                            <label for="other_docs">Upload Supporting Document</label>
                            <input type="file" name="other_docs" id="other_docs" class="form-control s_website_form_input" multiple="multiple"/>
                            <small class="form-text text-muted">Hold Ctrl/Shift to select multiple files</small>
                        </div>

                        <div class="form-group text-center">
                            <a href="#" role="button" class="btn btn-primary submit_btn" id="submit_btn">Submit</a>
                        </div>

                    </form>
                </section>
            </t>
        </template>

        <template name="memo_request_helpdesk_success_template" id="memo_request_helpdesk_success_template">
            <t t-call="website.layout">
                <div class="memo-helpdesk-container" style="text-align: center; padding: 48px 30px;">
                    <div style="margin-bottom: 24px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#4BB543" viewBox="0 0 24 24">
                            <circle cx="12" cy="12" r="10" fill="#E9F8ED"/>
                            <path d="M8.5 13.5l2.5 2.5 4.5-5.5" fill="none" stroke="#4BB543" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h2 style="color: #138496; margin-bottom: 16px;">Thank You!</h2>
                    <p style="font-size: 18px; color: #555; margin-bottom: 24px;">
                        Your ticket has been <strong>successfully submitted</strong>.<br/>
                        Ticket Number: <strong>#<span t-esc="code"/></strong>
                    </p>
                    <div style="margin-bottom: 12px;">
                        <a t-attf-href="/customerTicketStatus?code=#{code}" style="color: #138496; font-size: 16px; text-decoration: none;">
                            <i class="fa fa-arrow-right me-1"></i> Click to check your request status...
                        </a>
                    </div>
                    <a href="/customerTicket" class="btn btn-primary" style="padding: 10px 28px; font-size: 16px; border-radius: 6px; text-decoration: none;">
                        Submit Another
                    </a>
                </div>
            </t>
        </template>

    </data>
</odoo>