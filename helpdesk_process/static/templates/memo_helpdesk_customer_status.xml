<odoo> 
    <template id="memo_helpdesk_customer_status_template" name="Status Dashboard">
        <t t-name="Helpdesk Dashboard">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty"/>
                <div id="card" class="card CustomerStatusDashboard">
                    <div id="card_body" class="card-body">
                        <!-- <div class="form-row-inline"> -->
                        <div class="row m-2">
                            <span class="m-2">Ticket Number:</span>
                            <input 
                                class="form-control s_website_form_input mr-5" 
                                type="text" 
                                id="customer_info" 
                                name="customer_info" 
                                placeholder="Enter ticket number" 
                                required = "required"
                                data-fill-with="customer_info"
                                style="max-width: 300px;"
                            />
                            <a href="#" role="button" class="btn btn-primary btn-sm submit_btn m-2" style="max-width: 300px;" id="submit_btn">Submit</a>
                        </div>
                        <!-- To be rendered by Javascript -->
                        <div id="status_display_div" class="d-none"> 
                            <div id="status_display_wrapper" class="customer-status-wrapper">
                                <div id="status_display" class="progress-container">
                                    <!-- Dynamic stages will be rendered here via JS -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>      
            </t>
        </t>
    </template>
</odoo>