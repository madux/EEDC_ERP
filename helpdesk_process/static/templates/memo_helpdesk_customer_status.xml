<odoo> 
    <template id="memo_helpdesk_customer_status_template" name="Status Dashboard">
        <t t-name="Helpdesk Dashboard">
            <t t-call="website.layout">
                <section class="hero-section">
                    <div class="hero-overlay"></div>
                    <div class="container">
                        <div class="hero-card text-center p-5 CustomerStatusDashboard">
                            <h2 class="hero-title">Looking for your request progress?</h2>
                            <p class="hero-subtitle">Search it using your request ticket number</p>

                            <div class="ticket-form d-flex justify-content-center align-items-center">
                                <input type="text" id="customer_info" name="customer_info"
                                    class="form-control me-2 s_website_form_input"
                                    placeholder="Enter ticket number" required="required" data-fill-with="customer_info"
                                    style="max-width: 300px;" />
                                <button id="submit_btn" class="btn btn-search" style="max-width: 60px;">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>

                            <div id="error-message" class="error-box d-none mt-3">
                                <div class="error-title">Request not found.</div>
                                <div class="error-subtext">We couldn’t locate any request matching that number.</div>
                            </div>

                            <a href="#" id="toggle-status" class="toggle-status mt-3 d-block d-none">
                                <span id="toggle-arrow">▼</span>
                                <span id="toggle-text">Click to view request path</span>
                            </a>

                            <div id="status_display_div" class="d-none">
                                <div id="status_display_wrapper" class="customer-status-wrapper">
                                    <div id="status_display" class="progress-container">
                                        <!-- Dynamic stages will be rendered here via JS -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </t>
        </t>
    </template>
</odoo>
