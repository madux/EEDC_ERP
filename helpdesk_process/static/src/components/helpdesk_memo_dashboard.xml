<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="helpdesk_process.HelpdeskMemoDashboard" owl="1">
        <div t-if="state.dashboardValues" class="o_helpdesk_banner d-flex flex-wrap py-4 border-bottom bg-view">
            <div class="col text-center">
                <h3>Total Tickets</h3>
                <span t-esc="state.dashboardValues.total_tickets"/>
            </div>
            <div class="col text-center">
                <h3>Resolved Tickets</h3>
                <span t-esc="state.dashboardValues.resolved_tickets"/>
            </div>
            <div class="col text-center">
                <h3>Pending Tickets</h3>
                <span t-esc="state.dashboardValues.pending_tickets"/>
            </div>
        </div>
    </t>
</templates>