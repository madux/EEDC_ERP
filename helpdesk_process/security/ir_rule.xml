<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Define the user group for helpdesk users -->
        <record id="helpdesk_process_rule" model="ir.rule">
            <field name="name">Helpdesk Process Rule</field>
            <field name="model_id" ref="helpdesk_process.model_memo_config"/>
            <!-- <field name="domain_force">[('user_id', '=', user.id)]</field> -->
            <field name="domain_force">[('stage_ids.approver_ids.user_id', '=', user.id)]</field>
            <!-- <field name="groups" eval="[(4, ref('helpdesk_process.group_helpdesk_user'))]"/> -->
            <field name="groups" eval="[(4, ref('company_memo.mainmemo_officer'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Define the user group for helpdesk managers -->
        <record id="helpdesk_process_manager_rule" model="ir.rule">
            <field name="name">Helpdesk Process Manager Rule</field>
            <field name="model_id" ref="helpdesk_process.model_memo_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[
                (4, ref('company_memo.mainmemo_manager')),
                (4, ref('company_memo.mainmemo_audit')),
                (4, ref('company_memo.mainmemo_manager')),
                ]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>