<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="import_account_data_form_view" model="ir.ui.view">
        <field name="name">import.account.data</field>
        <field name="model">import.account.data</field>
        <field name="arch" type="xml">
            <form string="Import-">
                <header>
                    <button name="import_button" string="Import Record" type="object"  class="oe_highlight"/>
                </header>
                <div class="oe_edit_only alert alert-info" role="alert">
                    Click to <a href="https://docs.google.com/spreadsheets/d/1gVBoI7TlBUWcfiKu3r_ZHf10oxvdrGJ96llNlr_NqYA/edit?gid=0#gid=0" target="_blank">See template </a><br/>
                    1. Upload the template 2. Select the import type account transaction 3. Select the company <br/>
                    4. Set the company account code <br/>
                    5. Select the balance account <br/>
                    6. Select the target journal of the company selected <br/>
                    <br/>
                </div>
                <group>
                    <group>
                        <field name="filename" invisible="1"/> 
                        <field name="data_file" filename="filename" widget="binary"/>
                        <field name="index"/> 
                        <field name="import_type" required="0" invisible="0"/>
                        <field name="company_id" required="0" invisible="0"/>
                        <field name="coa_prefix" required="0" invisible="0"/>

                    </group>
                    <group> 
                        <field name="default_account" invisible="0" required="1"/>
                        <field name="running_journal_id" required="1" />
                    </group>
                </group>
                <footer>
                    <button name="import_button" string="Import Record" type="object"  class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record> 

    

     
    <record id="action_odoo_account_import" model="ir.actions.act_window">
        <field name="name">Import</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">import.account.data</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>
    <menuitem
            id="menu_account_import_records"
            name="Import Account (For Subcos)"
            parent="account.menu_finance_entries_accounting_miscellaneous"
            action="eedc_report.action_odoo_account_import"
            sequence="102"/>

</odoo>