<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="account_dynamic_report_form_view" model="ir.ui.view">
        <field name="name">account.dynamic.report</field>
        <field name="model">account.dynamic.report</field>
        <field name="arch" type="xml">
            <form string="Dynamic report">
                <sheet>
                    <header>
                        
                    </header>

                    <div class="oe_edit_only alert alert-info" role="alert">
                        Select by the year to report<br/>
                        <strong>Fiscal Year: </strong> <field name="fiscal_year" nolabel="1" required="1"/> <br/>
                    </div>
                    <div class="oe_edit_only alert alert-info" role="alert">
                        If fiscal year is selected, ensure to Select by date range based on the year<br/>
                        <strong>Date From: </strong> <field name="date_from" nolabel="1"/> -- to -- <strong>Date to: </strong><field name="date_to" nolabel="1"/><br/>
                        <br/>
                    </div>
                    <group>
                        <group>
                            <!-- <field name="budget_id" readonly="0"/>  -->
                            <field name="name" required="1" placeholder="e.g NOTE FOR FINANCIAL YEAR 2025"/> 
                            <field name="partner_id" readonly="0" invisible="1"/> 
                            <field name="account_type" required="1"/> 
                            <field name="account_head_type" required="0"/> 
                            <field name="report_type"/> 
                            <field name="format"/> 
                            <field name="excel_file" nolabel="0" filename="filename"/>
                        </group>
                        <group> 
                            <field name="company_ids" widget="many2many_tags" options="{'no_create': True}" />
                            <field name="branch_ids" widget="many2many_tags" readonly="0" groups="ik_multi_branch.account_major_user,base.group_system" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="journal_ids" string="Bank journals" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="account_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <!-- <field name="account_analytics_ids" widget="many2many_tags" readonly="0" invisible="1" options="{'no_create': True}"/> -->
                            <field name="moveline_ids" widget="many2many_tags" invisible="1" options="{'no_create': True}"/>
                            <field name="filename" invisible="1"/>

                        </group>
                    </group>
                </sheet>

                <footer>
                    <button name="action_generate_report" string="Generate Report" type="object" class="oe_highlight"/>
                    <!-- <button name="print_reports" string="Print TEST" type="object" class="oe_highlight"/> -->
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_dynamic_report" model="ir.actions.act_window">
        <field name="name">Account Reports</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.dynamic.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record> 

