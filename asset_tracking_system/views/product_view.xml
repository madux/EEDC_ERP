<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_product_template_memo_form_inherit">
            <field name="name">product Product Inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="before">
                    <field name="sum_up_total" invisible="0"/> 
                    <field name="account_asset_model" readonly="0" force_save="1" invisible="0"
                    context="{'default_state': 'model'}" domain="[('state', '=', 'model')]"/>
                    <field name="part_number" readonly="0" force_save="1" invisible="0"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_product_category_form_memomodel_inherit">
            <field name="name">product category Memo model Inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_all"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='removal_strategy_id']" position="after">
                    <field name="sum_up_total" invisible="0"/> 
                    <field name="account_asset_model" readonly="0" force_save="1" invisible="0"
                    context="{'default_state': 'model'}" domain="[('state', '=', 'model')]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>