<odoo>
    <!-- Tree View -->
    <record id="view_relatives_disclosure_form_tree" model="ir.ui.view">
        <field name="name">relatives.disclosure.form.tree</field>
        <field name="model">relatives.disclosure.form</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="staff_number"/>
                <field name="department"/>
                <field name="state_of_origin"/>
                <field name="submission_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View (with notebook tabs, chatter, signature, relatives) -->
    <record id="view_relatives_disclosure_form_form" model="ir.ui.view">
        <field name="name">relatives.disclosure.form.form</field>
        <field name="model">relatives.disclosure.form</field>
        <field name="arch" type="xml">
            <form string="Relatives Disclosure Form">
                <sheet>
                    <div class="oe_title">
                        <label for="employee_id"/>
                        <h1>
                            <field name="employee_id" placeholder="Enter your name"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Disclosure Details">
                            <group>
                                <field name="staff_number" placeholder="Enter staff number"/>
                                <field name="designation" placeholder="Enter designation"/>
                                <field name="department" placeholder="Select department"/>
                                <field name="location" placeholder="Select district"/>
                                <field name="state_of_origin" placeholder="Select state of origin"/>
                                <field name="village" placeholder="Enter village"/>
                                <field name="town" placeholder="Enter town"/>
                                <field name="lga" placeholder="Select LGA"/>
                                <field name="permanent_address" placeholder="Enter permanent address"/>
                                <field name="gender" placeholder="Select gender"/>
                                <field name="marital_status" placeholder="Select marital status"/>
                                <field name="maiden_name"
                                    placeholder="Enter Maiden Name"
                                    attrs="{'invisible': [('marital_status', '!=', 'married')]}"/>
                                <field name="submission_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="signature_filename" readonly="1"/>
                                <field name="signature" filename="signature_filename"/>
                            </group>
                        </page>
                        <page string="Relatives">
                            <field name="relative_ids">
                                <tree editable="bottom">
                                    <field name="relative_name"/>
                                    <field name="relationship"/>
                                    <field name="relative_district"/>
                                    <field name="relative_department"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="relative_name" placeholder="Enter relative name"/>
                                        <field name="relationship" placeholder="Select relationship"/>
                                    </group>
                                    <group>
                                        <field name="relative_district"/>
                                        <field name="relative_department"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_relatives_disclosure_form_search" model="ir.ui.view">
        <field name="name">relatives.disclosure.form.search</field>
        <field name="model">relatives.disclosure.form</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="staff_number"/>
                <field name="department"/>
                <field name="state_of_origin"/>
                <field name="submission_date"/>
                <group expand="0" string="Group By">
                    <filter name="group_department" string="Department" domain="[]" context="{'group_by':'department'}"/>
                    <filter name="group_state" string="State" domain="[]" context="{'group_by':'state_of_origin'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Window Action -->
    <record id="action_relatives_disclosure_form" model="ir.actions.act_window">
        <field name="name">Relatives Disclosure Forms</field>
        <field name="res_model">relatives.disclosure.form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_relatives_disclosure_form_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first relatives disclosure form!
            </p>
        </field>
    </record>
</odoo>
