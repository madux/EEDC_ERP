<odoo>
    <template id="relatives_disclosure_form_template" name="Relative Disclosure Form">
        <t t-call="website.layout">
            <t t-call-assets="web.assets_frontend"/>
            <div class="relatives-disclosure-container">
                <h2>Relatives Disclosure Form</h2>
                <form action="/relativesDisclosureForm/submit" method="post" class="relatives-disclosure-form">
                    <div class="form-group">
                        <label>Name of Staff</label>
                        <input type="text" name="employee_id" class="form-control" required="1" placeholder="Enter your name"/>
                    </div>
                    <div class="form-group">
                        <label>Staff Number</label>
                        <input type="text" name="staff_number" class="form-control" required="1" placeholder="Enter your staff number"/>
                    </div>
                    <div class="form-group">
                        <label>Designation</label>
                        <input type="text" name="designation" class="form-control" required="1" placeholder="Enter your designation"/>
                    </div>
                    <div class="form-group">
                        <label>Location</label>
                        <select name="location" class="form-control" required="1">
                            <option value="">Select...</option>
                            <t t-foreach="locations" t-as="loc">
                                <option t-att-value="loc.id"><t t-esc="loc.name"/></option>
                            </t>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Department</label>
                        <select name="department" class="form-control" required="1">
                            <option value="">Select...</option>
                            <t t-foreach="departments" t-as="dept">
                                <option t-att-value="dept.id"><t t-esc="dept.name"/></option>
                            </t>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>State of Origin</label>
                        <select name="state_of_origin" class="form-control" required="1">
                            <option value="">Select...</option>
                            <t t-foreach="states" t-as="st">
                                <option t-att-value="st.id"><t t-esc="st.name"/></option>
                            </t>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Village</label>
                        <input type="text" name="village" class="form-control" required="1" placeholder="Enter your village"/>
                    </div>
                    <div class="form-group">
                        <label>Town</label>
                        <input type="text" name="town" class="form-control" required="1" placeholder="Enter your town"/>
                    </div>
                    <div class="form-group">
                        <label>Local Government Area</label>
                        <select name="lga" class="form-control" required="1">
                            <option value="">Select...</option>
                            <t t-foreach="lgas" t-as="lga">
                                <option t-att-value="lga.id"><t t-esc="lga.name"/></option>
                            </t>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Permanent Address</label>
                        <input type="text" name="permanent_address" class="form-control" required="1" placeholder="Enter your permanent address"/>
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <select name="gender" id="gender" class="form-control" required="1">
                            <option value="">Select...</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Marital Status</label>
                        <select name="marital_status" id="marital_status" class="form-control" required="1">
                            <option value="">Select...</option>
                            <option value="single">Single</option>
                            <option value="married">Married</option>
                            <option value="divorced">Divorced</option>
                            <option value="widowed">Widowed</option>
                        </select>
                    </div>
                    <div class="form-group" id="maiden_name_group">
                        <label>Maiden Name</label>
                        <input type="text" name="maiden_name" class="form-control" required="1" placeholder="Enter your maiden name"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </t>
    </template>
    <template id="thank_you_template" name="Thank You">
        <t t-call="website.layout">
            <div class="container">
                <h2>Thank you for submitting your relatives disclosure form</h2>
            </div>
        </t>
    </template>
</odoo>


