<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Portal-auth page (auth='user' on the route enforces login) -->
        <template id="tm_taskboard_page" name="Taskboard Page">
            <t t-call="website.layout">
                <div class="container my-5 tm-page tm-taskboard" data-tm-init="True">
                
                    <!-- App Grid (unchanged, toggleable) -->
                    <section id="website-app-section" class="page-section">
                        <t t-call="portal_request.website_app_page"/>
                    </section>

                    <!-- Top toolbar (no login/switch UI here) -->
                    <div class="tm-topbar mb-4">
                        <div id="app-icon" class="thumbnail-header">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" class="bi bi-grid-fill custom-icon" viewBox="0 0 16 16">
                                <path d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5zm8 0A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5zm-8 8A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5zm8 0A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5z"/>
                            </svg>
                        </div>
                        <div class="tm-head">
                            <h2 class="tm-title mb-0">My Tasks</h2>
                            <small class="tm-sub">To Do • In Progress • Review • Done</small>
                        </div>
                        <div class="tm-actions d-flex gap-2">
                            <input id="tm_search" class="form-control" placeholder="Search tasks"/>
                            <select id="tm_filter_priority" class="form-select">
                                <option value="">All priorities</option>
                                <option value="2">High</option>
                                <option value="1">Medium</option>
                                <option value="0">Low</option>
                            </select>
                            <button id="tm_refresh" class="btn btn-refresh">Refresh</button>
                        </div>
                    </div>

                    <!-- Columns (rendered by QWeb via JS) -->
                    <div id="tm_board" class="row g-3 tm-board">
                        <!-- JS will render columns/cards here via QWeb templates -->
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
