                <button class="tm-ct tm-ct-expand" data-action="expand" title="Expand" aria-label="Expand"><svg viewBox="0 0 24 24"><path d="M3 10V3h7M21 14v7h-7M21 10V3h-7M3 14v7h7" fill="none" stroke="currentColor" stroke-width="2"/></svg></button>
              </div>
            </div>
            <div class="tm-card-body"><canvas id="tm_ad_chart_emp_overdue"></canvas></div>
          </div>
        </div>

        <!-- LIST VIEW -->
        <div id="tm_ad_list_wrap" class="tm-card mt-3">
          <div class="tm-card-head d-flex justify-content-between align-items-center">
            <span>Tasks</span>
            <div class="small text-muted" id="tm_ad_results_info">—</div>
          </div>
          <div class="tm-card-body">
            <div class="table-responsive">
              <table id="tm_ad_table" class="table table-hover align-middle">
                <thead>
                  <tr>
                    <th data-sort="key">Key</th>
                    <th data-sort="name">Name</th>
                    <th data-sort="employee_id">Employee</th>
                    <th data-sort="stage">Stage</th>
                    <th data-sort="priority">Priority</th>
                    <th data-sort="due_date">Due Date</th>
                    <th data-sort="manager_id">Manager</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
            <!-- <div class="d-flex justify-content-between align-items-center mt-2">
              <div class="small text-muted" id="tm_ad_pager_info"></div>
              <div class="btn-group">
                <button class="btn btn-sm btn-light" id="tm_ad_prev">Prev</button>
