                  <!-- <button class="tm-ct tm-ct-collapse" data-action="collapse" title="Close" aria-label="Close"><svg viewBox="0 0 24 24"><path d="M10 3H3v7M14 21h7v-7M21 10V3h-7M3 14v7h7" fill="none" stroke="currentColor" stroke-width="2"/></svg></button> -->
                  <button class="tm-ct tm-ct-collapse" data-action="collapse" title="Collapse" aria-label="Collapse"><svg viewBox="0 0 24 24"><path d="M4 9V4h5M20 9V4h-5M4 15v5h5M20 15v5h-5" fill="none" stroke="currentColor" stroke-width="2"/></svg></button>
                </div>
              </div>
              <div class="modal-body">
                <div class="tm-modal-canvas-wrap">
                  <canvas id="tm_ad_modal_canvas"></canvas>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </t>
  </template>
