        <div class="row g-3 tm-ad-kpis mt-2">
          <div class="col-md-2">
            <div class="tm-kpi -total">
              <span class="tm-kpi-icon" aria-hidden="true">
                <!-- Bar chart -->
                <svg viewBox="0 0 24 24"><rect x="3" y="10" width="4" height="10"/><rect x="10" y="5" width="4" height="15"/><rect x="17" y="2" width="4" height="18"/></svg>
              </span>
              <div class="tm-kpi-label">Total</div>
              <div id="tm_ad_kpi_total" class="tm-kpi-value">—</div>
            </div>
          </div>

          <div class="col-md-2">
            <div class="tm-kpi -overdue">
              <span class="tm-kpi-icon" aria-hidden="true">
                <!-- Alert triangle -->
                <svg viewBox="0 0 24 24"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><circle cx="12" cy="17" r="1.1"/></svg>
              </span>
              <div class="tm-kpi-label">Overdue</div>
              <div id="tm_ad_kpi_overdue" class="tm-kpi-value">—</div>
            </div>
          </div>

          <div class="col-md-2">
            <div class="tm-kpi -today">
              <span class="tm-kpi-icon" aria-hidden="true">
                <!-- Calendar -->
                <svg viewBox="0 0 24 24"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
              </span>
              <div class="tm-kpi-label">Due Today</div>
              <div id="tm_ad_kpi_today" class="tm-kpi-value">—</div>
            </div>
          </div>

          <div class="col-md-3">
            <div class="tm-kpi -done">
              <span class="tm-kpi-icon" aria-hidden="true">
                <!-- Check circle -->
                <svg viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><polyline points="9 12 11 14 15 10"/></svg>
              </span>
              <div class="tm-kpi-label">Done (in period)</div>
              <div id="tm_ad_kpi_done_period" class="tm-kpi-value">—</div>
            </div>
          </div>

          <div class="col-md-3">
            <div class="tm-kpi -blocked">
              <span class="tm-kpi-icon" aria-hidden="true">
                <!-- Lock -->
                <svg viewBox="0 0 24 24"><rect x="3" y="11" width="18" height="10" rx="2"/><path d="M7 11V8a5 5 0 0 1 10 0v3"/></svg>
              </span>
              <div class="tm-kpi-label">Blocked</div>
              <div id="tm_ad_kpi_blocked" class="tm-kpi-value">—</div>
            </div>
          </div>
        </div>


        <!-- CHARTS WRAPPER -->
        <div class="tm-ad-charts tm-mt-3">
          <!-- Stage -->
          <div class="tm-card" data-chart-key="stage">
            <div class="tm-card-head d-flex align-items-center justify-content-between">
              <span class="tm-card-title">Stage Distribution</span>
              <div class="tm-card-tools" role="toolbar" aria-label="Chart tools">
                <button class="tm-ct" data-type="bar"        title="Bar"        aria-label="Bar chart"><svg viewBox="0 0 24 24"><rect x="3" y="10" width="4" height="11"/><rect x="10" y="6" width="4" height="15"/><rect x="17" y="2" width="4" height="19"/></svg></button>
                <button class="tm-ct" data-type="bar-h"      title="Horizontal" aria-label="Horizontal bar chart"><svg viewBox="0 0 24 24"><rect y="4" x="3" width="18" height="3"/><rect y="10.5" x="3" width="12" height="3"/><rect y="17" x="3" width="8" height="3"/></svg></button>
                <button class="tm-ct" data-type="line"       title="Line"       aria-label="Line chart"><svg viewBox="0 0 24 24"><path d="M3 18l6-7 4 3 8-9" fill="none" stroke="currentColor" stroke-width="2"/></svg></button>
                <button class="tm-ct" data-type="pie"        title="Pie"        aria-label="Pie chart"><svg viewBox="0 0 24 24"><path d="M12 12V3a9 9 0 019 9z"/><path d="M12 12L3 12a9 9 0 009 9z"/><path d="M12 12L12 3A9 9 0 003 12z"/></svg></button>
                <button class="tm-ct" data-type="doughnut"   title="Doughnut"   aria-label="Doughnut chart"><svg viewBox="0 0 24 24"><circle cx="12" cy="12" r="9" fill="none" stroke="currentColor" stroke-width="2"/><circle cx="12" cy="12" r="4"/></svg></button>
                <button class="tm-ct tm-ct-expand" data-action="expand" title="Expand" aria-label="Expand"><svg viewBox="0 0 24 24"><path d="M3 10V3h7M21 14v7h-7M21 10V3h-7M3 14v7h7" fill="none" stroke="currentColor" stroke-width="2"/></svg></button>
              </div>
            </div>
            <div class="tm-card-body"><canvas id="tm_ad_chart_stage"></canvas></div>
          </div>

          <!-- Priority -->
          <div class="tm-card" data-chart-key="priority">
            <div class="tm-card-head d-flex align-items-center justify-content-between">
              <span class="tm-card-title">Priority Mix</span>
              <div class="tm-card-tools" role="toolbar" aria-label="Chart tools">
                <button class="tm-ct" data-type="bar"      title="Bar" aria-label="Bar chart"><svg viewBox="0 0 24 24"><rect x="3" y="10" width="4" height="11"/><rect x="10" y="6" width="4" height="15"/><rect x="17" y="2" width="4" height="19"/></svg></button>
                <button class="tm-ct" data-type="bar-h"    title="Horizontal" aria-label="Horizontal bar chart"><svg viewBox="0 0 24 24"><rect y="4" x="3" width="18" height="3"/><rect y="10.5" x="3" width="12" height="3"/><rect y="17" x="3" width="8" height="3"/></svg></button>
                <button class="tm-ct" data-type="line"     title="Line" aria-label="Line chart"><svg viewBox="0 0 24 24"><path d="M3 18l6-7 4 3 8-9" fill="none" stroke="currentColor" stroke-width="2"/></svg></button>
                <button class="tm-ct" data-type="pie"      title="Pie" aria-label="Pie chart"><svg viewBox="0 0 24 24"><path d="M12 12V3a9 9 0 019 9z"/><path d="M12 12L3 12a9 9 0 009 9z"/><path d="M12 12L12 3A9 9 0 003 12z"/></svg></button>
                <button class="tm-ct" data-type="doughnut" title="Doughnut" aria-label="Doughnut chart"><svg viewBox="0 0 24 24"><circle cx="12" cy="12" r="9" fill="none" stroke="currentColor" stroke-width="2"/><circle cx="12" cy="12" r="4"/></svg></button>
                <button class="tm-ct tm-ct-expand" data-action="expand" title="Expand" aria-label="Expand"><svg viewBox="0 0 24 24"><path d="M3 10V3h7M21 14v7h-7M21 10V3h-7M3 14v7h7" fill="none" stroke="currentColor" stroke-width="2"/></svg></button>
              </div>
            </div>
            <div class="tm-card-body"><canvas id="tm_ad_chart_priority"></canvas></div>
          </div>

          <!-- Overdue by Manager -->
          <div class="tm-card" data-chart-key="overdueMgr">
            <div class="tm-card-head d-flex align-items-center justify-content-between">
              <span class="tm-card-title">Overdue by Manager</span>
              <div class="tm-card-tools" role="toolbar" aria-label="Chart tools">
                <button class="tm-ct" data-type="bar"      title="Bar" aria-label="Bar chart"><svg viewBox="0 0 24 24"><rect x="3" y="10" width="4" height="11"/><rect x="10" y="6" width="4" height="15"/><rect x="17" y="2" width="4" height="19"/></svg></button>
