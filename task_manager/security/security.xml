<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">

    <!-- Manager group -->
    <record id="group_tm_manager" model="res.groups">
      <field name="name">Task Manager (Manager)</field>
      <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!-- Portal: can see & update ONLY their own tasks (via employee link) -->
    <record id="rule_tm_task_portal_own" model="ir.rule">
      <field name="name">Task: portal own</field>
      <field name="model_id" ref="model_tm_task"/>
      <!-- apply to portal users -->
      <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
      <!-- scope: tasks whose employee is the current user -->
      <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
      <!-- record rule perms -->
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="0"/>
      <field name="perm_unlink" eval="0"/>
    </record>

    <!-- (Optional) Manager: unrestricted on tm.task -->
    <record id="rule_tm_task_manager_all" model="ir.rule">
      <field name="name">Task: manager all</field>
      <field name="model_id" ref="model_tm_task"/>
      <field name="groups" eval="[(4, ref('task_manager.group_tm_manager'))]"/>
      <field name="domain_force">[(1, '=', 1)]</field>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="1"/>
    </record>

  </data>
</odoo>
