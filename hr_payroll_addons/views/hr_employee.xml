<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_view_employee_inherited_form_for_hr_payroll_addons">
            <field name="name">hr.employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                     <field name="monthly_wage" groups="hr.group_hr_manager,base.group_system"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_view_employee_inherited_filter_hr_payroll_addons" >
            <field name="name">hr.employee.hr_payroll addons</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter" />
            <field name="arch" type="xml"> 
                <field name="parent_id" position="after">
                    <field name="monthly_wage" groups="hr.group_hr_manager,base.group_system"/> 
                </field>
            </field>
        </record> 

        <record id="ir_action_server_employee_contract" model="ir.actions.server">
			<field name="name">Generate Employee(s) Contract</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="hr_payroll_addons.model_hr_employee"/>
            <field name="binding_model_id" ref="hr_payroll_addons.model_hr_employee"/>
            <field name="state">code</field>
            <field name="groups_id" eval="[(6, 0, [
			ref('base.group_system'),
            ref('hr.group_hr_manager'),
			])]"/>
            <field name="code">action=model.create_employee_contract_action()</field>
        </record>
    </data>
</odoo>