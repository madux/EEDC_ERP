<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_inherit_check_company" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.check.company</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Enforce Company Validation" string="Company Validation">
                    <h2>Company Validation</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="check_company_strict"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="check_company_strict"/>
                                <div class="text-muted">
                                    Uncheck this to allow cross-company links without raising an error.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
