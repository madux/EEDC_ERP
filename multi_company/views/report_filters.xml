        <!-- department -->
        <record id="view_multi_company_hr_department_search" model="ir.ui.view">
            <field name="name">multi_company.hr_department.search</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inactive']" position="after">
                    <field name="company_id" />
                    
                    <filter 
                    name="holdco_filter" 
                    domain="[('company_id.name','ilike', 'ENUGU')]" 
                    string="HOLD Co"/>

                    <filter 
                    name="mainpower_filter" 
                    domain="[('company_id.name','ilike', 'MAIN')]" 
                    string="MAINPOWER"/>

                    <filter 
                    name="firstpower_filter" 
                    domain="[('company_id.name','ilike', 'FIRST')]" 
                    string="FIRST POWER"/>

                    <filter
                        name="transpower_filter"
                        domain="[('company_id.name','ilike', 'TRANSPOWER')]"
                        string="TRANSPOWER"
                    />

                    <filter 
                    name="new_era_filter" 
                    domain="[('company_id.name','ilike', 'NEW')]" 
                    string="NEW ERA"/>

                    <filter 
                    name="eastland_filter" 
                    domain="[('company_id.name','ilike', 'EAST')]" 
                    string="EASTLAND"/>

                    <group expand="0" string="Group By...">
                        <filter
                            name="group_by_company_id"
                            string="Company"
                            domain="[]"
                            context="{'group_by':'company_id'}"
                        />
                    </group>
                </xpath>

                <!-- <xpath expr="//group[@name='group_by']" position="inside">
                    <filter name="group_by_company_id" string="Company" 
                            context="{'group_by': 'company_id'}"/>
                </xpath> -->
            </field>
        </record>

