<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Leave Allocation Import Wizard Form -->
    <record id="hr_leave_allocation_import_form_view" model="ir.ui.view">
        <field name="name">hr.leave.allocation.import.wizard.form</field>
        <field name="model">hr.leave.allocation.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Leave Allocations">
                <group>
                    <group string="File Settings">
                        <field name="filename" invisible="1"/> 
                        <field name="data_file" filename="filename" required="1"/>
                        <field name="index" help="Sheet index in the workbook (0 for first sheet)"/> 
                        <field name="batch_size" help="Process records in batches for better performance"/>
                    </group>
                    
                    <group string="Override Options">
                        <field name="leave_type_id" 
                               help="Optional: Select to use this leave type for all records instead of reading from Excel"/>
                        <field name="company_id" 
                               help="Optional: Select to use this company for all records instead of reading from Excel"/>
                    </group>
                </group>
                
                <footer>
                    <button name="import_leave_allocations" 
                            string="Import Leave Allocations" 
                            type="object"  
                            class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
