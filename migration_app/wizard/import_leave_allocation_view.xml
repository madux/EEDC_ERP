    <!-- Action to Open Leave Allocation Import Wizard -->
    <record id="action_wizard_leave_allocation_import" model="ir.actions.act_window">
        <field name="name">Import Leave Allocations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.leave.allocation.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <!-- Menu Items -->
    <menuitem id="menu_leave_allocation_import" 
              name="Import Leave Allocations" 
              sequence="17" 
              parent="migration_app.menu_import_gt_first_level" 
              action="action_wizard_leave_allocation_import"/>
              
