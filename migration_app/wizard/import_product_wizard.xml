<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_import_product_wizard_form_view" model="ir.ui.view">
            <field name="name">import.product.wizard</field>
            <field name="model">import.product.wizard</field>
            <field name="arch" type="xml">
                <form string="Import ">
                    <header>
                        <button name="import_records_action" string="Migrate Employee Record" type="object"  class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </header>
                    <group>
                        <group>
                            <field name="import_type"/> 
                            <field name="company_id"/> 
                            <field name="location_id"/> 
                            <field name="property_stock_inventory"/> 
                            <field name="index"/> 
                        </group>
                        <group>
                            <field name="data_file" filename="name"/>
                            <field name="filename" invisible="1"/> 
                        </group>
                    </group>
                </form>
            </field>
        </record>   
        <record id="import_product_wizard_view_tree" model="ir.ui.view">
            <field name="name">import.product.wizard.tree</field>
            <field name="model">import.product.wizard</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="import_type"/> 
                    <field name="company_id"/> 
                    <field name="location_id"/> 
                    <field name="index"/>
                </tree>
            </field>
        </record>
        <record id="action_import_product_wizard" model="ir.actions.act_window">
            <field name="name">Import Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.product.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>
        
        <menuitem id="menu_import_product_first_level" name="Products" groups="base.group_system" sequence="12" parent="migration_app.menu_import_root"/> 
        <menuitem id="menu_import_product_wizard" name="Import Products" groups="base.group_system" sequence="12" parent="migration_app.menu_import_product_first_level" action="action_import_product_wizard"/> 
</odoo>